{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "rootDir": "./src",
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "experimentalDecorators": true
    },
    "exclude": [
        "build",
        "examples",
        "node_modules",
        "test",
        "lib"
    ]
}